generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(100)
  description String   @db.VarChar(500)
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
}
